@using UserAwardsApp.PL.UIWebPages.HelpersBLL;
@using UserAwardsApp.Entities;

@{

    Layout = "_PagesLayout.cshtml";
    if (User.IsInRole("Guest"))
    {
        Response.Redirect("~/Index.cshtml");
    }

    List<Award> allAwards = Provaiders.awardsLogic.GetAllAwards().ToList();

    var flag = false;

    if (IsPost)
    {
        var awardToEdit = Request["editAward"];

        if (!string.IsNullOrWhiteSpace(awardToEdit))
        {
            flag = true;
        }

        var awardID = Request["editAwardID"];
        var awardName = Request["EditNameAward"];


        if (!string.IsNullOrWhiteSpace(awardID) && !string.IsNullOrWhiteSpace(awardName))
        {

            Guid awardGuid = Provaiders.AwardIDs[int.Parse(awardID)];
            Provaiders.awardsLogic.EditAward(awardGuid, awardName);

            Response.Redirect("~/MyPages/ShowAllAwards.cshtml");
        }
    }

}

<main>
    <div class="container" style="height:1300px;">
        <div class="row mt-2 pt-2">
            <div class="col text-center">
                <h1 class="display-3">Awards Page</h1>
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Guid ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Image</th>
                            @{
                                if (!User.IsInRole("Guest") && !User.IsInRole("User"))
                                {
                                    <th scope="col">Info</th>
                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            Provaiders.AwardIDs.Clear();

                            int numberOfAward = 1;

                            if (allAwards.Count == 0)
                            {
                                <tr>
                                    <th scope="row">Empty</th>
                                    <td>Empty</td>
                                    <td>Empty</td>
                                    <td>Empty</td>
                                    @{
                                        if (!User.IsInRole("Guest") && !User.IsInRole("User"))
                                        {
                                            <td>Empty</td>
                                        }
                                    }

                                </tr>

                            }

                            foreach (var award in allAwards)
                            {
                                Provaiders.AwardIDs.Add(numberOfAward, award.ID);

                                <tr>
                                    <th scope="row">@numberOfAward</th>
                                    <td>@award.ID</td>
                                    <td>@award.Name</td>
                                    <td>
                                        @if (award.Image != null)
                                        {
                                            var src = Convert.ToBase64String(award.Image);

                                            <img style="width:100px;height:100px" class="rounded mx-auto d-block"
                                                 src="data:image/png;base64,@src" alt="image" />
                                        }
                                        else
                                        {
                                            <img style="width:100px;height:100px" class="rounded mx-auto d-block"
                                                 src="~/MyImages/no_image.png" alt="image" />
                                        }
                                    </td>
                                    @{
                                        if (!User.IsInRole("Guest") && !User.IsInRole("User"))
                                        {
                                            <td>
                                                <form action="~/MyPages/RemoveAward.cshtml" method="post">
                                                    <input type="hidden" class="" name="deleteAward" value="@numberOfAward">
                                                    <button type="submit" class="btn btn-danger">Delete Award</button>
                                                </form>
                                                <form action="~/MyPages/ShowAllAwards.cshtml" method="post">
                                                    <input type="hidden" class="" name="editAward" value="@numberOfAward">
                                                    <button type="submit" class="btn btn-warning">Edit Award</button>
                                                </form>
                                                @{
                                                    if (flag)
                                                    {
                                                        <div>
                                                            <form action="~/MyPages/ShowAllAwards.cshtml" method="post" name="editForm">
                                                                <div class="row">
                                                                    <input type="hidden" class="" name="editAwardID" value="@numberOfAward">
                                                                    <div class="col">
                                                                        <input type="text" class="form-control" placeholder="Edit Name of Award" name="EditNameAward">
                                                                    </div>
                                                                </div>
                                                                <button type="submit" class="btn btn-primary">Submit</button>
                                                            </form>
                                                        </div>
                                                    }
                                                }
                                            </td>
                                        }
                                    }
                                </tr>
                                numberOfAward++;
                            }
                        }
                    </tbody>
                </table>
                @{
                    if (allAwards.Count == 0)
                    {
                        <div class="alert alert-danger">Sorry, there are no Awards in the database now!</div>
                    }
                }
                <div>
                    <nav>
                        @{
                            if (!User.IsInRole("Guest") && !User.IsInRole("User"))
                            {
                                @*<a type="button" class="btn btn-success" href="~/MyPages/AddNewAward.cshtml">Add new Award</a>*@

                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#NewAwardCreating">
                                    Add new Award
                                </button>
                            }
                        }
                        <a type="button" class="btn btn-primary" href="~/Index.cshtml">Main Menu</a>
                    </nav>
                </div>
            </div>
        </div>
        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="NewAwardCreating">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle"><b>Create new Award!</b></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form action="~/MyPages/AddNewAward.cshtml" method="post" enctype="multipart/form-data" class="md-form">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="New Award Name" name="AwardName">
                                </div>

                                <div class="col">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroupFileAddon01">Image</span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="validatedCustomFile" name="LoadingImage">
                                            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                            <div class="invalid-feedback">Invalid cast</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
            
        </div>
    </div>
</main>