@using UserAwardsApp.Entities;
@using UserAwardsApp.PL.UIWebPages.HelpersBLL;
@{
    Layout = null;

    //Provaiders.accountLogic.CreateAccount("Admin", "Admin", "Admin");
    //if (!MyDirectory.CheckOrCreateDirectoryAndFiles())
    //{
    //    Provaiders.accountLogic.CreateAccount("Admin", "Admin", "Admin");
    //}

    if (User.Identity.IsAuthenticated && !User.IsInRole("Guest"))
    {
        Response.Redirect("~/Index.cshtml");
    }

    if (IsPost)
    {
        if (Request["login"] != null && Request["password"] != null)
        {
            var login = Request["login"];
            var password = Request["password"];
            var remember = Request["remember"];

            bool rememberFlag = false;

            if (remember == "on")
            {
                rememberFlag = true;
            }

            var account = Provaiders.accountLogic.GetAllAccounts().FirstOrDefault(myAcc => myAcc.Login == login);


            if ((account != null) && (password == account.Password))
            {
                FormsAuthentication.SetAuthCookie(login, rememberFlag);

                Response.Redirect("~/Index.cshtml");
            }
        }
        if (Request["AsGuest"] != null)
        {
            FormsAuthentication.SetAuthCookie("Guest", true);

            Response.Redirect("~/MyPages/ShowAllUsers");
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
